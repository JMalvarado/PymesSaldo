<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity
            android:name=".activities.activities.EditProfileActivity"
            android:label="@string/editProfile_name"
            android:theme="@style/myTheme" />
        <activity
            android:name=".activities.activities.EditEntryActivity"
            android:label="@string/editEntry_name" />
        <activity
            android:name=".activities.activities.AddEntryActivity"
            android:label="@string/addEntry_name" />
        <activity
            android:name=".activities.activities.DataSearch"
            android:label="@string/dataSearch_name" />
        <activity
            android:name=".activities.activities.AddProfileActivity"
            android:label="@string/addProfile_name" />
        <activity
            android:name=".activities.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>