<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_editEntry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activities.activities.EditEntryActivity">

    <EditText
        android:id="@+id/etIngreso_editEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:autofillHints=""
        android:hint="@string/addentry_textView_hintIngreso"
        android:inputType="number"
        android:padding="20dip" />

    <EditText
        android:id="@+id/etGasto_editEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:autofillHints=""
        android:hint="@string/addentry_textView_hintGasto"
        android:inputType="number"
        android:padding="20dip" />

    <EditText
        android:id="@+id/etdescripcion_editEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:autofillHints=""
        android:hint="@string/addentry_textView_hintDescr"
        android:inputType="text"
        android:maxLength="30"
        android:padding="20dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_editEntry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:onClick="onClickEditEntry"
            android:text="@string/addentry_button_textFecha" />

        <TextView
            android:id="@+id/textView_editEntry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/button_editEntry_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickEditEntry"
        android:text="@string/editEntry_button_textEditar" />

</LinearLayout>