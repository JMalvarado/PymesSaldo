<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_customSpinnerCategories"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/customSpinnerCategories_imageView_descr"
        android:padding="10dp"
        android:src="@drawable/baseline_add_photo_alternate_black_48dp" />

    <TextView
        android:id="@+id/textView_customSpinnerCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

</LinearLayout>