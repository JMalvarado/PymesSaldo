<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <EditText
        android:id="@+id/dialogLayoutAddCategory_editText_categoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/dialogAddCategory_textView_name_hint"
        android:inputType="text"
        android:maxLength="20"
        tools:ignore="LabelFor" />

    <ImageButton
        android:id="@+id/imageButton_addCategory_addIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/roundcornerbrownlight"
        android:clickable="true"
        android:contentDescription="@string/datalist_imageview_decr_imagecategory"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_add_photo_alternate_black_48dp" />

</LinearLayout>